# Run the container with `docker run -p 3000:3000 -t todo-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system todo-service && \
          adduser --system -G todo-service todo-service

COPY dist/apps/todo-service todo-service/
RUN chown -R todo-service:todo-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix todo-service --omit=dev -f install

CMD [ "node", "todo-service" ]
