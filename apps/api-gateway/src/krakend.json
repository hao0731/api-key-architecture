{
  "$schema": "https://www.krakend.io/schema/v2.9/krakend.json",
  "version": 3,
  "endpoints": [
    {
      "endpoint": "/users/signup",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/users",
          "host": ["http://auth-service:3333"],
          "method": "POST",
          "extra_config": {
            "backend/http": {
              "return_error_details": "auth-service-a"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/users/login",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/users/login",
          "host": ["http://auth-service:3333"],
          "method": "POST"
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "RS256",
          "jwk_local_path": "./assets/jwks/jwks.json",
          "keys_to_sign": [
            "access_token",
            "refresh_token"
          ],
          "kid": "8fWd4L_a1cV3-do8jKZuRurYVgwHrLqorv8gQpcGo1s",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/users/{userId}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/users/{userId}",
          "host": ["http://auth-service:3333"],
          "method": "GET"
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_local_path": "./assets/jwks/public.json",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api-keys",
      "method": "POST",
      "input_headers": ["x-user", "Content-Type"],
      "backend": [
        {
          "url_pattern": "/api/api-keys",
          "host": ["http://auth-service:3333"],
          "method": "POST",
          "extra_config": {
            "backend/http": {
              "return_error_details": "auth-service-a"
            }
          }
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_local_path": "./assets/jwks/public.json",
          "disable_jwk_security": true,
          "operation_debug": true,
          "propagate_claims": [
            ["sub", "x-user"]
          ]
        }
      }
    }
  ],
  "extra_config": {}
}
